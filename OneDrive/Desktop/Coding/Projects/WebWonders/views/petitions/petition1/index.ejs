			document.addEventListener("DOMContentLoaded", () => {
  let currSign = document.getElementById("curr").innerText;
  console.log(currSign);
  if (localStorage.getItem("p1") === null) {
    localStorage.setItem("p1", currSign);
  }
  document.getElementById("curr").innerText = localStorage.getItem("p1");
});

