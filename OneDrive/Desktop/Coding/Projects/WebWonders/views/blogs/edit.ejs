<%=layout("/layouts/boilerplate.ejs")%>
<video autoplay loop muted src="https://cdn.pixabay.com/video/2021/10/05/90877-629483574_tiny.mp4"></video>
<div class="row mt-3">
<div class="col-8 offset-2">
    <h3 style="color:white">Edit your Blog:</h3>
    <form method="POST" action="/blogs/<%=blog._id%>?_method=PUT" novalidate class="needs-validation">

      <div class="mb-3">
         <label  style="color:#2aeb10e8 !important;" for="title" class="form-label">Title:</label>
        <input  class="form-control" name="blog[title]" placeholder="enter title" value="<%=blog.title%>" required/>
        <div class="invalid-feedback">Please enter a title!</div>
        <div class="valid-feedback">Title looks good!</div>
      </div>
        <div class="mb-3">
            <label  style="color:#2aeb10e8 !important;" for="blog" class="form-label">Blog Details:</label>
            <textarea class="form-control" name="blog[blogs]" placeholder="Type your blog content"><%=blog.blogs%> required></textarea>
               <div class="invalid-feedback">Please enter a short description!</div>
        </div>
        <div class="mb-3">
            <label  style="color:#2aeb10e8 !important;" for="author" class="form-label">Author:</label>
            <input  class="form-control" name="blog[author]" placeholder="type your name" type="text" value="<%=blog.author%>" required/>
            <div class="invalid-feedback">Please enter your name!</div> 
        </div>
        <div class="mb-3">
            <label  style="color:#2aeb10e8 !important;" for="image" class="form-label">Image Link:</label>
            <input  class="form-control" name="blog[image]"  placeholder="Enter image URL" type="text" value="<%=blog.image%>" required/>
            <div class="invalid-feedback">Please enter a image URL!</div>
        </div>
        <button class="edit-btn btn-dark mt-3">Edit</button>
    </div>
    </div>
    </form>
